# Application
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@postgres:5432/elevateedu
DB_USER=elevateedu
DB_PASSWORD=change-me-in-production

# Redis
REDIS_URL=redis://redis:6379

# Authentication & Security
# REQUIRED: Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change-me-to-random-secret-in-production

# REQUIRED: Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
DOWNLOAD_SECRET=change-me-to-random-secret-in-production

# REQUIRED: Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=change-me-to-random-secret-in-production

ADMIN_SECRET=change-me-to-random-admin-secret
CRYPTO_SECRET=change-me-to-random-crypto-secret

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://elevateforhumanity.org

# Rate Limiting
RATE_LIMIT_PER_MIN=100

# Content Protection & Duplication Scanner
# Optional: Google Custom Search API for enhanced duplication detection
GOOGLE_SEARCH_API_KEY=your-google-api-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id

# Cloud Storage (Cloudflare R2)
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=elevateedu-storage

# AI Services
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@elevateedu.com
SMTP_PASSWORD=your-smtp-password

# Monitoring
SENTRY_DSN=your-sentry-dsn

# Domain
DOMAIN=elevateedu.com
API_URL=https://api.elevateedu.com
