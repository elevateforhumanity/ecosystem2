# Application
NODE_ENV=production
PORT=3001
FRONTEND_PORT=8012

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/elevateedu
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=generate-with-openssl-rand-base64-64
JWT_REFRESH_SECRET=generate-with-openssl-rand-base64-64
